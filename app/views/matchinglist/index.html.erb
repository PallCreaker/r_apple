<% @users.each.with_index(1) do |user, index| %>
    <div class="user-panel <%= index%2 == 0 ? 'even' : 'odd' %> cf">
    <%= image_tag user.image, class: 'user-photo' %>
    <div class="user-info">
      <p class="user-name"><%= user.user_name %></p>
      <p class="univ"><%= set_univ_for_convert user.university %></p>
      <p class="score"><%= Score.my_score(user.id).maximum("score") %>ç‚¹</p>
      <%= link_to image_tag('/img/sensenhukoku.png', class: 'fukoku'), :controller => 'matchinglist', :action => 'create', :enemy_id => user %>
    </div>
    </div>
<% end %>
<script>
  $('.user-photo').spoilerAlert({max: 10, partial: 10});
</script>
